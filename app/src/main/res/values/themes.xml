<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.BookTracker" parent="Theme.Material3.DayNight.NoActionBar">
    </style>
    <style name="Theme.BookTracker" parent="Base.Theme.BookTracker" />

    <style name="LibraryCollectionText">
        <item name="android:textSize">@dimen/libraryFragment_textSize_collectionName</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="LibraryCollectionCount">
        <item name="android:textSize">@dimen/libraryFragment_textSize_itemsCount</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/grayText</item>
    </style>

    <style name="LibraryTitle">
        <item name="android:textSize">@dimen/libraryFragment_textSize_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="LibraryCollectionIcon">
        <item name="android:tint">@color/imagesColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LibraryRightArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/imagesColor</item>
    </style>

    <style name="LibraryDivider">
        <item name="android:layout_height">@dimen/libraryFragment_divider_height</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="strokeWidth">@dimen/settingsFragment_stroke_width</item>
        <item name="strokeColor">@color/black_text</item>
        <item name="cornerRadius">@dimen/settingsFragment_corner_radius</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="iconTint">@color/black_text</item>
        <item name="iconSize">@dimen/settingsFragment_iconSize_button</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textSize">@dimen/settingsFragment_textSize_button</item>
        <item name="android:padding">@dimen/settingsFragment_button_padding</item>
    </style>

    <style name="SettingsSwitchMaterial">
        <item name="thumbTint">@color/grayText</item>
        <item name="trackTint">@color/gray</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/settingsFragment_textSize_button</item>
    </style>
    <style name="SettingsTitleStyle">
        <item name="android:textSize">@dimen/settingsFragment_textSize_title</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>
</resources>